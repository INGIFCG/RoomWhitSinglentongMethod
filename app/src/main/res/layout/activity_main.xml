<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="260dp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="120dp"
        android:layout_marginRight="20sp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textSize="25sp"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="38dp" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text=""
            android:textSize="15sp"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="78dp" />

        <TextView
            android:id="@+id/title_lastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apellido"
            android:textSize="25sp"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="125dp" />

        <EditText
            android:id="@+id/lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text=""
            android:textSize="15sp"
            tools:layout_editor_absoluteX="88dp"
            tools:layout_editor_absoluteY="172dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp">

            <TextView
                android:id="@+id/title_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Age:"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="61dp"
                tools:layout_editor_absoluteY="237dp" />

            <EditText
                android:id="@+id/age"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text=""
                tools:layout_editor_absoluteX="58dp"
                tools:layout_editor_absoluteY="302dp" />

            <TextView
                android:id="@+id/title_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="Email:"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="61dp"
                tools:layout_editor_absoluteY="237dp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                tools:layout_editor_absoluteX="58dp"
                tools:layout_editor_absoluteY="302dp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="@+id/clear_btn"
        app:layout_constraintEnd_toStartOf="@+id/clear_btn"
        app:layout_constraintTop_toTopOf="@+id/clear_btn"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/clear_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="228dp"
        android:text="Clear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Contact app"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/get_all_contact_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="132dp"
        android:text="Get all"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
